{
  "title": "2 DIFFERENT SHORTCUTS",
  "rules": [
    {
      "description": "ðŸ”µ Diffrent shortcuts",
      "manipulators": [
        // TODO cmd + pgdown to cycle through tabs in browser
        // Possible solutions:
        // 1. other combination DO work -> remap other combination to call ctrl+tab
        // 2. send command+comma in front_most_app - browser
        // 3. send cmd + tab
        // 4. other
        {
          "description": "Move back in history opt+left",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Move forward in history opt+right",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Switch tab in file explorer",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "tab"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$",
                "com.binarynights.ForkLift-3",
                "io.fman.fman",
                "info.filesmanager.Files",
                "com.eltima.cmd1"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Quit app cmd+q",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "prevent cmd+h",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["command"]
            },
            "type": "basic"
          }
        },
        {
          "description": "RemNote cmd+enter zoom into rem",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["io.remnote"]
            }
          ],
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "RemNote cmd+shift+f duplicate cmd+p",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["io.remnote"]
            }
          ],
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "p",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Lock screen",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command", "left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Disable ctrl+s in browser",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.brave.Browser", "com.google.Chrome"]
            }
          ],
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [{ "key_code": "vk_none" }],
          "type": "basic"
        }
      ]
    }
  ]
}
