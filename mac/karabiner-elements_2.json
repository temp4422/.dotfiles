{
  "title": "2 DIFFERENT SHORTCUTS",
  "rules": [
    {
      "description": "iTerm2",
      "manipulators": [
        {
          "description": "iTerm2 cmd+shit+c set variable copyMode = 1",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["left_command", "left_shift"]
            },
            {
              "set_variable": {
                "name": "copyMode",
                "value": 1
              }
            }
          ],
          "type": "basic"
        },
        {
          "description": "iTerm2 if copyMode = 1; cmd+c -> y",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            },
            {
              "type": "variable_if",
              "name": "copyMode",
              "value": 1
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "y"
            },
            {
              "set_variable": {
                "name": "copyMode",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "description": "iTerm2 disable cmd+shift+p",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [{ "key_code": "vk_none" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "VSCode",
      "description2": "Shitty macOS force me to put this manipulators about '1 MAIN SHORTCUTS' to work properly, because it interfere with home/end and opt+right/left modifications",
      "manipulators": [
        {
          "description": "Fix VSCode smart selection opt+right/left",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.microsoft.VSCode"]
            }
          ],
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["right_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "home"
            }
          ],
          "type": "basic"
        },
        {
          "description": "Fix VSCode smart selection opt+right/left",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.microsoft.VSCode"]
            }
          ],
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["right_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ],
          "type": "basic"
        },
        {
          "description": "VSCode cmd+shift+/ -> cmd+alt+shif+/ -> macros.logSelection",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.microsoft.VSCode"]
            }
          ],
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "slash",
              "modifiers": ["left_command", "left_shift", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Miscellaneous",
      "manipulators": [
        {
          "description": "Move back in history opt+left",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Move forward in history opt+right",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Switch tab in file explorer",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "tab"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$",
                "com.binarynights.ForkLift-3",
                "io.fman.fman",
                "info.filesmanager.Files",
                "com.eltima.cmd1"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Quit app cmd+q",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "prevent cmd+h",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["command"]
            },
            "type": "basic"
          }
        },
        {
          "description": "RemNote cmd+enter zoom into rem",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["io.remnote"]
            }
          ],
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "RemNote cmd+shift+f duplicate cmd+p",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["io.remnote"]
            }
          ],
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "p",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Lock screen",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command", "left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Disable ctrl+s in browser",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.brave.Browser", "com.google.Chrome"]
            }
          ],
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ],
          "type": "basic"
        },
        {
          "description": "Remap left_cmd+h send ctrl+h",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Select word with cmd+d except VSCode and Sublime Text",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["com.microsoft.VSCode", "com.sublimetext.4"]
            }
          ],
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option"]
            },
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
